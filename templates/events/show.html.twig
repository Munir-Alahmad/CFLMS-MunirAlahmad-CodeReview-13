{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
<div class='container'>
    <h1>Events</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            {# <tr>
                <th>Picture</th>
                <td>{{ event.picture }}</td>
            </tr> #}
            <tr>
                <th>Capacity</th>
                <td>{{ event.capacity }}</td>
            </tr>
            <tr>
                <th>EMail</th>
                <td>{{ event.eMail }}</td>
            </tr>
            <tr>
                <th>PhoneNr</th>
                <td>{{ event.phoneNr }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ event.adress }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ event.url }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ event.type }}</td>
            </tr>
        </tbody>
    </table>
    <div class="foto">
        <img src='/pictures/{{ event.picture }}'>
    </div>

    <a class="btn btn-success mb-3 " href="{{ path('app_events_index') }}">back to list</a>

    {# <a href="{{ path('app_events_edit', {'id': event.id}) }}">edit</a> #}

    <a class="btn btn-success mb-3 " href="{{ path('app_events_edit', {'id': event.id}) }}">edit</a>

    {{ include('events/_delete_form.html.twig') }}
</div>
{% endblock %}
